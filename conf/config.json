{
    "zookeeper": {
        "connectionString": "127.0.0.1:2181/backbeat",
        "autoCreateNamespace": false
    },
    "kafka": {
        "hosts": "127.0.0.1:9092"
    },
    "s3": {
        "host": "127.0.0.1",
        "port": 8000
    },
    "auth": {
        "type": "account",
        "account": "bart",
        "vault": {
            "host": "127.0.0.1",
            "port": 8500,
            "adminPort": 8600
        }
    },
    "queuePopulator": {
        "cronRule": "*/5 * * * * *",
        "batchMaxRead": 10000,
        "zookeeperPath": "/queue-populator",
        "logSource": "ingestion",
        "bucketd": {
            "host": "localhost",
            "port": 9000
        },
        "dmd": {
            "host": "127.0.0.1",
            "port": 9990
        },
        "mongo": {
            "replicaSetHosts": "localhost:27017,localhost:27018,localhost:27019",
            "writeConcern": "majority",
            "replicaSet": "rs0",
            "readPreference": "primary",
            "database": "metadata"
        }
    },
    "ingestion": {
        "zookeeperPath": "/ingestion",
        "cronRule": "*/5 * * * * *",
        "sources": [
            {
                "name": "source1",
                "cronRule": "*/5 * * * * *",
                "zookeeperSuffix": "/source1",
                "host": "54.202.35.127",
                "port": 9000,
                "https": false,
                "type": "scality",
                "raftCount": 8
            },
            {
                "name": "source2",
                "zookeeperSuffix": "/source2",
                "host": "",
                "port": 9000,
                "https": false,
                "type": "aws"
            }
        ]
    },
    "extensions": {
        "ingestion": {
            "topic": "backbeat-ingestion"
        },
        "mongoProcessor": {
            "topic": "backbeat-ingestion",
            "groupId": "backbeat-mongo-processor-group",
            "retryTimeoutS": 300
        },
        "replication": {
            "source": {
                "transport": "http",
                "s3": {
                    "host": "127.0.0.1",
                    "port": 8000
                },
                "auth": {
                    "type": "service",
                    "account": "service-replication",
                    "vault": {
                        "host": "127.0.0.1",
                        "port": 8500,
                        "adminPort": 8600
                    }
                }
            },
            "destination": {
                "transport": "http",
                "bootstrapList": [
                    { "site": "zenko", "servers": ["localhost:8001"],
                      "echo": false },
                    { "site": "us-east-1", "type": "aws_s3" }
                ],
                "certFilePaths": {
                    "key": "ssl/key.pem",
                    "cert": "ssl/cert.crt",
                    "ca": "ssl/ca.crt"
                },
                "auth": {
                    "type": "service",
                    "account": "service-replication"
                }
            },
            "topic": "backbeat-replication",
            "replicationStatusTopic": "backbeat-replication-status",
            "queueProcessor": {
                "groupId": "backbeat-replication-group",
                "retryTimeoutS": 300,
                "concurrency": 10
            },
            "replicationStatusProcessor": {
                "groupId": "backbeat-replication-group",
                "retryTimeoutS": 300,
                "concurrency": 10
            }
        }
    },
    "log": {
        "logLevel": "info",
        "dumpLevel": "error"
    },
    "metrics": {
        "topic": "backbeat-metrics"
    },
    "server": {
        "healthChecks": {
            "allowFrom": ["127.0.0.1/8", "::1"]
        },
        "host": "127.0.0.1",
        "port": 8900
    }
}
