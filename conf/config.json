{
    "zookeeper": {
        "connectionString": "127.0.0.1:2181/backbeat",
        "autoCreateNamespace": false
    },
    "kafka": {
        "hosts": "127.0.0.1:9092"
    },
    "queuePopulator": {
        "cronRule": "*/5 * * * * *",
        "batchMaxRead": 10000,
        "zookeeperPath": "/queue-populator",
        "logSource": "dmd",
        "bucketd": {
            "host": "127.0.0.1",
            "port": 9000
        },
        "dmd": {
            "host": "127.0.0.1",
            "port": 9990
        },
        "probeServer": {
            "bindAddress": "localhost",
            "port": 4042
        }
    },
    "extensions": {
        "replication": {
            "source": {
                "transport": "http",
                "s3": {
                    "host": "127.0.0.1",
                    "port": 8000
                },
                "auth": {
                    "type": "account",
                    "account": "backbeatuser",
                    "vault": {
                        "host": "127.0.0.1",
                        "port": 8500,
                        "adminPort": 8600
                    }
                }
            },
            "destination": {
                "transport": "http",
                "bootstrapList": [
                    { "site": "sf", "servers": ["127.0.0.1:9443"],
                      "echo": false },
                    { "site": "wontwork-location", "type": "aws_s3" }
                ],
                "auth": {
                    "type": "account",
                    "account": "lisa"
                }
            },
            "topic": "backbeat-replication",
            "replicationStatusTopic": "backbeat-replication-status",
            "replicationFailedTopic": "backbeat-replication-failed",
            "monitorReplicationFailures": true,
            "monitorReplicationFailureExpiryTimeS": 86400,
            "replayTopics": [
                {
                    "topicName": "backbeat-replication-replay-0",
                    "retries": 3
                }
            ],
            "queueProcessor": {
                "groupId": "backbeat-replication-group",
                "retryTimeoutS": 300,
                "concurrency": 10,
                "mpuPartsConcurrency": 10,
                "probeServer": [
                    {
                        "site": "sf",
                        "bindAddress": "localhost",
                        "port": "4043"
                    }, {
                        "site" : "us-east-1",
                        "bindAddress": "localhost",
                        "port": "4044"
                    }
                ]
            },
            "replicationStatusProcessor": {
                "groupId": "backbeat-replication-group",
                "retryTimeoutS": 300,
                "concurrency": 10,
                "logConsumerMetricsIntervalS": 60,
                "probeServer": {
                    "bindAddress": "localhost",
                    "port": 4045
                }
            }
        }
    },
    "log": {
        "logLevel": "info",
        "dumpLevel": "error"
    },
    "metrics": {
        "topic": "backbeat-metrics"
    },
    "server": {
        "healthChecks": {
            "allowFrom": ["127.0.0.1/8", "::1"]
        },
        "host": "127.0.0.1",
        "port": 8900
    },
    "certFilePaths": {
        "key": "",
        "cert": "",
        "ca": ""
    }
}
